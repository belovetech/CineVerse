{
  "display": "Node LTS",
  "_version": "18.1.0",
  "compilerOptions": {
    // "types": ["vitest/importMeta"], allow to run test in the source file
    "lib": ["es2023"],
    "module": "ES2022",
    "target": "es2022",
    "moduleResolution": "node",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/*.ts"]
}
