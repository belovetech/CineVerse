{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "baseUrl": "./src",
  "paths": {
    "@*": ["*"],
    "@controllers/*": ["controllers/*"],
    "@datasource/*": ["datasource/*"],
    "@interfaces/*": ["interfaces/*"],
    "@middlewares/*": ["middlewares/*"],
    "@validators/*": ["validators/*"],
    "@services/*": ["services/*"],
    "@routes/*": ["routes/*"],
    "@models/*": ["models/*"],
    "@utils/*": ["utils/*"],
    "@config/*": ["config/*"],
    "@dtos/*": ["dtos/*"]
  },
  "include": ["src/**/*.ts", ".env"],
  "exclude": ["node_modules", "dist", ".vscode/**/*", "__tests__"]
}
