{
  "name": "movie-service",
  "version": "1.0.0",
  "description": "Distributed movie ticketing system - movie service",
  "main": "server.ts",
  "author": "Abeeb Raheem",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/belovetech/CineVerse.git#main"
  },
  "keywords": [
    "distributed",
    "microservice",
    "movie"
  ],
  "bugs": {
    "url": "https://github.com/belovetech/CineVerse/issues"
  },
  "homepage": "https://github.com/belovetech/CineVerse/tree/main#readme",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "test:server": "cross-env NODE_ENV=test nodemon",
    "build": "tsc && npx tsc-alias",
    "test": "mocha -r ts-node/register  --extension ts --timeout 5000 '__tests__/**/*.ts'",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "swagger:autogen": "ts-node ./src/swagger.ts"
  },
  "dependencies": {
    "@cineverse/libs": "workspace:*",
    "@types/express": "^4.17.17",
    "@types/validator": "^13.7.17",
    "class-validator": "^0.14.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/chai-http": "^4.2.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "mocha": "^10.2.0",
    "tsconfig-paths": "^4.2.0"
  }
}
