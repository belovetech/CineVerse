{
  "name": "movie-service",
  "version": "1.0.0",
  "description": "Distributed movie ticketing system - movie service",
  "main": "server.ts",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "test:server": "cross-env NODE_ENV=test nodemon",
    "build": "tsc && npx tsc-alias",
    "test": "mocha NODE_ENV=test -r ts-node/register  --extension ts '__tests__/**/*.ts'",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "clean": "yarn cache clean",
    "swagger:autogen": "ts-node ./src/swagger.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/belovetech/CineVerse.git#main"
  },
  "keywords": [
    "distributed",
    "microservice",
    "movie"
  ],
  "author": "Abeeb Raheem",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/belovetech/CineVerse/issues"
  },
  "homepage": "https://github.com/belovetech/CineVerse/tree/main#readme",
  "dependencies": {
    "@cineverse/logger": "1.0.0",
    "@types/express": "^4.17.17",
    "@types/validator": "^13.7.17",
    "class-validator": "^0.14.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "tsconfig-paths": "^4.2.0"
  }
}
